# Crear .gitignore recomendado para .NET + Angular + Docker
cat > .gitignore << 'EOF'
# Build folders
bin/
obj/
dist/
out/
publish/

# Node & front-end
node_modules/
npm-debug.log*
yarn-debug.log*
yarn-error.log*

# Environment
.env
.env.*

# Docker
*.pid
*.log
docker-compose.override.yml

# OS / IDE
.DS_Store
Thumbs.db
.vscode/
.idea/
*.swp
*.swo
EOF
